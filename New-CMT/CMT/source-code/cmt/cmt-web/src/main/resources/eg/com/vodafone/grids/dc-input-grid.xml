<gridUserInterface xmlns="http://www.itworx.com/ns/gridUserInterface"
                   id="inputGrid"
                   var="scoringTask"
                   width="100%"
                   controllerUrlMapping="list">

    <column id="name"
            label="Input Name"
            expression="var.name"
            columnType="LABEL"
            sortable="false"/>

    <column id="actions"
            label="Actions"
            columnType="LINK_LIST">

        <link dynamicHref="var.name"
              onClick="editInput"
              linkStyle="EditUser"
              linkLabel="Edit"/>

        <link dynamicHref="var.name"
              onClick="deleteInput"
              linkStyle="DeleteUser"
              linkLabel="Delete"/>
    </column>


</gridUserInterface>